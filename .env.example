# HTTPx Scanner Configuration
# Copy this file to .env and update values for your environment

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Admin User (change these on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Database Configuration
DATABASE_URL=postgresql+asyncpg://httpx:httpx@postgres:5432/httpx_scanner
# For SQLite (development): DATABASE_URL=sqlite+aiosqlite:///./httpx_scanner.db

# Redis Configuration
REDIS_URL=redis://redis:6379/0
USE_REDIS=true

# CORS Settings
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Scanner Configuration
MAX_CONCURRENCY=1000
MAX_SCAN_RETENTION_DAYS=30
HTTPX_PATH=httpx

# Notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
WEBHOOK_SECRET=

# Development Settings
DEBUG=false
RELOAD=false